{
    "compilerOptions": {
        "target": "esnext",
        "module": "CommonJS",
        "outDir": "./dist",
        "esModuleInterop": true,
        "declaration": true,
        "resolveJsonModule": true,
        "stripInternal": true,
        "rootDir": "./src",
        "types": [
            "node",
            "@drayman/types"
        ],
        "inlineSourceMap": true
    },
    "include": [
        "./src/**/*"
    ]
}